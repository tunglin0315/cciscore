                    <div class="form-group">
                        <label asp-for="KeywordEng" class="control-label"></label>
                        <input asp-for="KeywordEng" class="form-control" />
                        <span asp-validation-for="KeywordEng" class="text-danger"></span>
                    </div>
                
                </div>

            <div class="col-md-2"></div>
        </div>
    <div class="text-center">
        <div class="form-group">
            <input type="submit" value="@ViewData["Title"]" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger">取消</a>
        </div>
      
    </div>
    </form>
  
</div>

