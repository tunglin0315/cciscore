                    <input asp-for="NumberLaw" class="form-control" />
                    <span asp-validation-for="NumberLaw" class="text-danger"></span>
                </div>
                <div  class="form-group">
                    <label asp-for="DefiProjectClass" class="control-label"></label>
                    <input asp-for="DefiProjectClass" class="form-control" />
                    <span asp-validation-for="DefiProjectClass" class="text-danger"></span>
                </div>
                <div  class="form-group">
                    <label asp-for="ExecutiveUnit" class="control-label"></label>
                    <input asp-for="ExecutiveUnit" class="form-control" />
                    <span asp-validation-for="ExecutiveUnit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InfoLink" class="control-label"></label>
                    <input asp-for="InfoLink" class="form-control" />
                    <span asp-validation-for="InfoLink" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-4">

                    <div class="form-group">
                        <label asp-for="PlanHost" class="control-label"></label>
                        <input asp-for="PlanHost" class="form-control" />
                        <span asp-validation-for="PlanHost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectClass" class="control-label"></label>
                        <input asp-for="ProjectClass" class="form-control" />
                        <span asp-validation-for="ProjectClass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
