@model Poster
@{
    bool IsAdd = Model.Guid == null;
    string CtrlName = IsAdd ? "新增" : "編輯";
}
<div class="container-fluid mt-2">
    <div class="bg-primary text-white">
        <h4>@CtrlName Poster</h4>
    </div>
    <form asp-action="Save" method="post" enctype="multipart/form-data">
        <input type="hidden" name="Guid" value="@Model.Guid" />
        <div>
            <img src="@Url.Content(Model.ImgPath)" height="100" />
        </div>
        <div>
            <label asp-for="File"></label>
            <input type="file" name="File" accept="image/gif,image/png,image/jpg,image/jpeg" />
            <div><span asp-validation-for="File" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <div><span asp-validation-for="Title" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Alt"></label>
            <input asp-for="Alt" class="form-control" />
            <div><span asp-validation-for="Alt" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Href"></label>
            <input asp-for="Href" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IsLow"></label>
            <input asp-for="IsLow" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IsLiving"></label>
            <input asp-for="IsLiving" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IsOffice"></label>
            <input asp-for="IsOffice" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Sort"></label>
            <input asp-for="Sort" class="form-control" />
            <div><span asp-validation-for="Sort" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="@CtrlName" />
        </div>
    </form>
    <a asp-action="PosterList" class="btn btn-secondary">回Poster主頁</a>
</div>