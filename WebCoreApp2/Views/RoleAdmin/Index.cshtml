@model IEnumerable<IdentityRole>

<div class="container">
    <div class="row">
        <div class="col col-md-12">
            <div class="bg-primary text-center text-white p-2"><h4>角色列表</h4></div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <table class="table table-sm table-bordered table-bordered">
                <tr>
                    <th>ID</th>
                    <th>角色名稱</th>
                    <th>使用者名稱</th>
                    <th>狀態管理</th>
                </tr>

                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">目前沒有角色</td>
                    </tr>
}
                else
                {
                    foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td identity-role="@role.Id"></td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">
                                        編輯
                                    </a>
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        刪除
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </table>
            <a class="btn btn-primary" asp-action="Create">新增</a>
        </div>
    </div>
</div>
