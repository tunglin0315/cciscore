@model IEnumerable<AppUser>


    <div class="container">
        <div class="row">
           
            <div class="col col-md-12">
                <div class="bg-primary text-white my-3 p-2 text-center " ><h4>使用者帳號列表</h4></div>
                <div class="text-danger" asp-validation-summary="ModelOnly">   </div>
                <table class="table table-sm table-bordered">
                    <tr>
                        <th>ID</th>
                        <th>帳號</th>
                        <th>電子信箱</th>
                        <th>狀態管理</th>
                    </tr>
                    @if (Model.Count() == 0)
                    {
                        <tr><td colspan="4" class="text-center">沒有任何使用者帳號</td></tr>}
                    else
                    {
                        foreach (AppUser user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">編輯</a>
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('確定刪除?')">刪除</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </table>
                <a class="btn btn-primary" asp-action="Create">建立帳號</a>
            </div>
           
        </div>
    </div>

